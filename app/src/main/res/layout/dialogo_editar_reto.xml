<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jersey"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/editar_reto"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/idEditReto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reto_modificar"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/color_general"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_cancelar"
                    android:backgroundTint="@color/color_general"
                    android:layout_marginEnd="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"

                    android:text="@string/btn_guardar"
                    android:layout_marginEnd="50dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>